type User {
  id: ID! @id
  firstname: String!
  lastname: String!
  email: String! @unique
  profileImage: String!
  password: String!
  posts: [Post!]! @relation(name: "PostToUser", onDelete: CASCADE)
  comments: [Comment!]! @relation(name: "CommentToUser", onDelete: CASCADE)
  replies: [Reply!]! @relation(name: "ReplyToUser", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Post {
  id: ID! @id
  title: String!
  body: String!
  imageUrl: String
  comment: [Comment!]! @relation(name: "CommentToPost", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  body: String!
  imageUrl: String
  author: User! @relation(name: "CommentToUser", onDelete: SET_NULL)
  post: Post! @relation(name: "PostToComment", onDelete: SET_NULL)
  replies: [Reply!]! @relation(name: "ReplyToComment", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Reply {
  id: ID! @id
  body: String!
  author: User! @relation(name: "ReplyToUser", onDelete: SET_NULL)
  comment: Comment! @relation(name: "CommentToReply", onDelete: SET_NULL)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Reaction {
  id: ID! @id
  upvote: Boolean!
  author: User!
}
